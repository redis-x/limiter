{
	"compileOnSave": false,
	"include": [
		"src/"
	],
	"exclude": [
		"dist/",
		"node_modules/"
	],
	"compilerOptions": {
		"outDir": "/dev/null",
		"declaration": true,
		"declarationDir": "dist/types",
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"lib": [
			"ESNext",
			"ES2021.String"
		],
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"strict": true,
		"removeComments": false,
		"allowJs": true,
		"checkJs": true
	}
}
